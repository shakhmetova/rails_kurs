%h1 Listing departaments

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @departaments.each do |departament|
      %tr
        %td= departament.name
        %td= link_to 'Show', departament
        %td= link_to 'Edit', edit_departament_path(departament)
        %td= link_to 'Destroy', departament, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Departament', new_departament_path
