%h1= t('headers.projects.index')

%table.table
  %thead
    %tr
      %th= Project.human_attribute_name(:name)
      %th= Project.human_attribute_name(:date_start)
      %th= Project.human_attribute_name(:date_finish)
      %th= Project.human_attribute_name(:price)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.date_start
        %td= project.date_finish
        %td= project.price
        %td
          = link_to project, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_project_path(project), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do
            = fa_icon :times

%br

= link_to t('buttons.new.project'), new_project_path, class: 'btn btn-primary'
