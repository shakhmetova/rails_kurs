%h1 Listing projects

%table
  %thead
    %tr
      %th Name
      %th Date start
      %th Date finish
      %th Price
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.date_start
        %td= project.date_finish
        %td= project.price
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }

%br

